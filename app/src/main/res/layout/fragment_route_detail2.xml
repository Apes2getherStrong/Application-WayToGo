<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".routes.RouteDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_route"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_route_24" />

        <TextView
            android:id="@+id/route_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="TytuÅ‚ trasy"
            android:textStyle="bold"
            android:padding="16dp"/>


        <TextView
            android:id="@+id/route_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Opis trasy"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>


        <LinearLayout
            android:id="@+id/linear_layout_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp">

        </LinearLayout>

    </LinearLayout>

</FrameLayout>